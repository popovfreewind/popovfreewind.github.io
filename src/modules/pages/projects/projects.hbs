{{> ../../shared/head title="Projects | Dmytro Popov" description="A result oriented Software Developer. Experienced in creating robust, user-focused applications for both CTV platforms and the web."}}

<body>

{{> ../../shared/header/header}}

<section class="projectsList">
    <div class="projectsList__container">
        <h1>Projects</h1>
        <div class="projectsList__items">
            {{#each projects}}
                <div class="projectsList__item">
                    <img src="{{this.poster}}" alt="{{this.name}} poster" class="projectsList__poster" loading="lazy" width="268" height="201">
                    <h2>{{this.name}}</h2>
                    <p>Platforms: 
                        {{#each this.links}}
                            <a href="{{this}}" target="_blank" class="projectsList__link">{{@key}}</a>
                        {{/each}}
                    </p>
                </div>
            {{/each}}
        </div>
    </div>
</section>

{{> ../../shared/footer/footer}}

</body>

</html>